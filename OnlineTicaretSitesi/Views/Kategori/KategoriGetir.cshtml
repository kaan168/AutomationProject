@model OnlineTicaretSitesi.Models.Siniflar.Kategori

@{
    ViewBag.Title = "KategoriGetir";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Kategori Güncelleme Sayfası</h2>
<br />
@using (Html.BeginForm("KategoriGüncelle", "Kategori", FormMethod.Post))
{
    <div class="form-group">
     @Html.LabelFor(x=>x.KategoriAd)
	 @Html.TextBoxFor(x=>x.KategoriAd,new { @class = "form-controll" })
		@Html.HiddenFor(x=>x.KategoriID)

    </div>
    <br />
    <button class="btn btn-warning">Güncelle</button>
}
