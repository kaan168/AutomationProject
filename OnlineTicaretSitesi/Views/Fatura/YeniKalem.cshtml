@model OnlineTicaretSitesi.Models.Siniflar.FaturaKalem
@{
    ViewBag.Title = "YeniKalem";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Yeni Kalem Girişi</h2>
<br />
<form class="form-group" method="post">
    <label>Açıklama :</label>
    @Html.TextBoxFor(x => x.Aciklama, new { @class = "form-control" })
    <br />
    <br />
    <label>Miktar :</label>
    @Html.TextBoxFor(x => x.Miktar, new { @class = "form-control" })
    <br />
    <br />
    <label>Birim Fiyat :</label>
    @Html.TextBoxFor(x => x.BirimFiyat, new { @class = "form-control" })
    <br />
    <br />
    <label>Tutar :</label>
    @Html.TextBoxFor(x => x.Tutar, new { @class = "form-control" })
    <br />
    <br />
    <label>ID :</label>
    @Html.TextBoxFor(x => x.Faturaid, new { @class = "form-control" })
    <br />
    <br />
    <button class="btn btn-warning">Fatura Ekle</button>
</form>